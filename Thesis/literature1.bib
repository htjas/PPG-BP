  shorttitle = {Prevalence of Hypertension in the {{US}} Adult Population},
  author = {Burt, V.L. and Whelton, P. and Roccella, E.J. and Brown, C. and Cutler, J.A. and Higgins, M. and Horan, M.J. and Labarthe, D.},
