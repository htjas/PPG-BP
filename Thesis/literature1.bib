@article{allenPhotoplethysmographyItsApplication2007a,
  title = {Photoplethysmography and Its Application in Clinical Physiological Measurement},
  author = {Allen, John},
  date = {2007-02},
  journaltitle = {Physiol. Meas.},
  volume = {28},
  number = {3},
